<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>
<link rel="stylesheet" href="/styles/style.css" />

<%- include("partials/header.ejs") %>
<section class="body_main">
  <div class="main_container">
    <% if(locals.data){ %>
    <h1>Edit Blog</h1>
    <form action="/api/home/<%=data.id%>" method="POST">
      <!-- <input type="hidden" name="id" value="<%= data.id %>" /> -->
      <input
        name="name"
        type="text"
        placeholder="Name"
        value="<%= data.name %>"
      />
      <input
        name="title"
        type="text"
        placeholder="Title"
        value="<%= data.title %>"
      />
      <textarea name="blog" placeholder="Blog content">
<%= data.blog %></textarea
      >
      <button class="submit-button" type="submit" value="Submit">
        Update Blog
      </button>
    </form>
    <% } else { %>
    <h1>Create Blog</h1>
    <form action="/api/home" method="POST" class="edit_container">
      <input
        name="name"
        type="text"
        class="feedback-input"
        placeholder="Name"
        required
      />
      <input
        name="title"
        type="text"
        class="feedback-input"
        placeholder="Title"
        required
      />
      <textarea
        name="blog"
        class="feedback-input"
        placeholder="Comment"
      ></textarea>
      <button type="submit" value="Submit" class="submit-button">Submit</button>
    </form>
    <% } %>
  </div>
</section>
